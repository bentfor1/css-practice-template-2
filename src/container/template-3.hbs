<header>
	<div class="header">
		<div class="">
			{{>logo}}
		</div>
		<nav class="header-nav">
			<div class="header-nav-right">
				{{>nav list=header}}
			</div>
		</nav>
	</div>
</header>

<div class="hero">
	{{#with hero}}
	<div class="hero_content">
		<div>
			<h1 class="hero_title">{{title}}</h1>
			<p class="hero_text">{{text}}</p>
		</div>
		<img src="{{photo}}" alt="Hero image" class="hero_image">
	</div>

	{{/with}}
</div>

<main class="blog">
	{{#each blog}}
	{{>cardBlog data=this}}
	{{/each}}
</main>

{{#with form}}
<div class="form">
	<div class="form_content">
		<h3 class="form_title">{{title}}</h3>
		<p class="form_info">{{info}}</p>
	</div>
	<div>
		<a href="{{href}}" class="button form_button">{{button}}</a>
	</div>
</div>
{{/with}}

<footer>

	<div class="footer">
		<div class="">
			{{>logo}}
			<span class="footer-copyright">Copyright 2023</span>
		</div>
		{{#each footer}}
		<div class="">
			<span class="footer_title">{{title}}</span>
			{{>nav list=links IsVertical=true}}
		</div>
		{{/each}}
	</div>
</footer>