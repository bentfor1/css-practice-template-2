<header>
	<div class="header">
		<div class="">
			{{>logo}}
		</div>
		<nav class="header-nav">
			<div class="header-nav-right">
				{{>nav list=header}}
			</div>
		</nav>
	</div>
</header>

<main class="main">
	{{#with info}}
	<div class="info">
		<h1 class="info_title">{{title}}</h1>

		<p class="info_description">{{description}}</p>

	</div>
	{{/with}}


	{{#with form}}
	<form class="form">
		<h2 class="form_title">{{title}}</h2>

		<div class="form_input_list">
			{{#each inputs}}
			<input type="{{type}}" placeholder=" {{placeholder}}" class="form_input" name="{{namr}}"
				id="form-input-{{id}}" />

			{{/each}}
		</div>

		<div class="form_checkbox">
			<input type="checkbox" name="{{checkbox.name}}" id="{{checkbox.name}}">
			<div></div>
			<label for="{{checkbox.name}}">{{checkbox.label}}</label>
		</div>

		<button type="submit" class="form_button">{{button}}</button>
		<p class="form_info">{{info}}</p>
	</form>
	{{/with}}



</main>

<div class="updates">
	{{#with updates}}
	<h3 class="upd_title">{{title}}</h3>
	{{#each list}}
	<div class="upd_card">
		<div class="upd_img_{{@index}}">32x32</div>
		<div class="upd_group">
			<div class="upd_nick">{{nickname}}</div>
			<div class="upd_descript">{{description}}</div>
		</div>
	</div>
	{{/each}}
	<button href={{show_all.url}} class="upd_btn">{{show_all.text}}</button>
	{{/with}}
</div>

<div class="expirience">
	{{#with expirience}}
	<div class="exp_title">{{title}}</div>
	<div class="exp_badge">{{badge}}</div>
	<div class="exp_group">
		{{#each list}}
		<div class="exp_card">
			<h3 class="exp_card_name">{{name}}</h3>
			<p class="exp_card_details">{{details}}</p>
		</div>
		{{/each}}
	</div>
	{{/with}}
</div>

<footer>

	<div class="footer">
		<div class="">
			{{>logo}}
			<span class="footer-copyright">Copyright 2023</span>
		</div>
		{{#each footer}}
		<div class="">
			<span class="footer_title">{{title}}</span>
			{{>nav list=links IsVertical=true}}
		</div>
		{{/each}}
	</div>
</footer>